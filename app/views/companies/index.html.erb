<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cnpj</th>
      <th>Constitution</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Cep</th>
      <th>Capital</th>
      <th>Last capital modification</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.cnpj %></td>
        <td><%= company.constitution %></td>
        <td><%= company.email %></td>
        <td><%= company.telephone %></td>
        <td><%= company.cep %></td>
        <td><%= company.capital %></td>
        <td><%= company.last_capital_modification %></td>
        <td><%= company.status %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

